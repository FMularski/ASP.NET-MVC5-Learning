@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if ( !Model.Any())
{
    <h3>We don't have any customers yet.</h3>
}
else
{

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>
    @foreach (var customer in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(customer.Name, "Details", new { id = customer.Id }, null)  @* null is for html attribuets such as new { @class = "cssClassName" }*@
            </td>
            <td>
                @customer.MembershipType.Name
            </td>
        </tr>
    }

    </table>
    
}




